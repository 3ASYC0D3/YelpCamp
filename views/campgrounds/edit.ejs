<% layout('layouts/boilerplate') %> 
<h2>Edit <%= campground.title %> campground</h2>
<form method="POST" action="/campgrounds/<%=campground.id%>?_method=PATCH">
    <div>
        <label for="title">Title</label>
        <input type="text" id="title" name="campground[title]" value="<%=campground.title%>">
    </div>
    <div>
        <label for="location">Location</label>
        <input type="text" id="location" name="campground[location]" value="<%=campground.location%>">
    </div>
    <button type="submit">Save</button>
</form>
<a href="/campgrounds">See all campgrounds</a>